<UserControl xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"             
             Width="800" Height="410">
    <Grid Margin="10" HorizontalAlignment="Center" VerticalAlignment="Center">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <TextBlock TextWrapping="Wrap" >This example demonstrates using XAML to enable and disable the Continue button.</TextBlock>

        <Button Content="Disable / Enable Next" Grid.Row="1" VerticalAlignment="Center" Margin="10" Width="200"
                xmlns:custom="clr-namespace:Tecan.RUP.DefaultControls.AttachedProperties;assembly=Tecan.RUP.DefaultControls"
                custom:AttachedUIProperties.MethodInformation="CallDisableEnableNextButtonMethod"/>

    </Grid>
</UserControl>
